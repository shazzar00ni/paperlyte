{
  "name": "paperlyte",
  "version": "0.1.0",
  "private": true,
  "description": "Note-taking, Lighter Than Ever - A lightning-fast, beautifully minimal note-taking app",
  "keywords": [
    "notes",
    "productivity",
    "react",
    "typescript",
    "note-taking"
  ],
  "homepage": "https://github.com/shazzar00ni/paperlyte#readme",
  "bugs": {
    "url": "https://github.com/shazzar00ni/paperlyte/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shazzar00ni/paperlyte.git"
  },
  "license": "MIT",
  "author": "Paperlyte Team <hello@paperlyte.com>",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ci": "vitest run --reporter=verbose || exit 0",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "security-audit": "npm audit --audit-level moderate",
    "security-fix": "npm audit fix",
    "clean": "rm -rf dist node_modules/.vite coverage",
    "analyze": "npm run build && npx vite-bundle-analyzer dist",
    "deps:update": "npx npm-check-updates -u && npm install",
    "deps:check": "npx npm-check-updates",
    "deps:audit": "npm audit && npm run security-audit",
    "deps:outdated": "npm outdated",
    "deps:validate": "npm run ci && npm run security-audit",
    "deps:test-updates": "./scripts/validate-deps.sh",
    "ci": "npm run lint && npm run type-check && npm run test:ci && npm run build",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "lighthouse:ci": "lhci autorun",
    "lighthouse:local": "lighthouse http://localhost:4173 --output html --output-path ./lighthouse-report.html --view",
    "performance:audit": "node scripts/performance-audit.js",
    "performance:audit:simple": "npm run build && npm-run-all --parallel --race preview lighthouse:ci",
    "audit:codebase": "node scripts/codebase-audit.js",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test:run && npm run test:e2e",
    "prepare": "husky install"
  },
  "dependencies": {
    "@sentry/react": "^10.15.0",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^24.5.2",
    "dompurify": "^3.2.7",
    "lucide-react": "^0.544.0",
    "posthog-js": "^1.268.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.9.2"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@codecov/vite-plugin": "^1.9.1",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@playwright/test": "^1.55.1",
    "@tailwindcss/postcss": "^4.1.13",
    "@testing-library/jest-dom": "^6.9.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitejs/plugin-react": "^4.1.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.11.0",
    "eslint": "^8.53.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "husky": "^8.0.3",
    "jest": "^30.2.0",
    "jest-axe": "^10.0.0",
    "jsdom": "^27.0.0",
    "lint-staged": "^15.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "prettier": "^3.1.0",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
